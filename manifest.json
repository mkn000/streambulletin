{
    "manifest_version": 2,
    "name": "Stream Bulletin",
    "version": "0.1.3",

    "description": "Displays live broadcasts from followed sources",
    "icons":{
	"128":"icon128.png"
    },

    "background": {
	"scripts":["browser-polyfill.js",
		   "moment.js",
		   "moment-timezone-with-data.js",
		   "background_script.js"]
    },

    "browser_action": {
	"default_icon": "icon128.png",
	"default_title": "Stream Bulletin",
	"default_popup": "popup/lives.html"
    },

    "content_scripts":[
	{
	    "matches": ["*://*.youtube.com/*"],
	    "js": ["ytlogin.js"]
	}
    ],
    
    "permissions": [
	"cookies",
	"tabs",
	"storage",
	"https://*.nicovideo.jp/*",
	"https://*.cdn.nimg.jp/*",
	"https://*.whowatch.tv/*",
	"https://*.openrec.tv/*",
	"https://*.twitcasting.tv/*",
	"https://*.youtube.com/*"
    ],
    
    "web_accessible_resources": [
	"background_script.js"
    ],

    "browser_specific_settings":{
	"gecko":{
	    "update_url":"https://github.com/mkn000/streambulletin/blob/master/updates.json"
	}
    }
}
